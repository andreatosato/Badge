@using Badge.Web.Models.Shared
@using Badge.Web.Models.People

@model PeopleViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create" asp-antiforgery="true" enctype="multipart/form-data">
    <div class="form-horizontal">
        <h4>Person</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nome" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Cognome" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Cognome" class="form-control" />
                <span asp-validation-for="Cognome" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Professione" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Professione" class="form-control" />
                <span asp-validation-for="Professione" class="text-danger"></span>
            </div>

        </div>

        <div class="file-field input-field">
            <div class="btn">
                <span>File</span>
                <input class="file-path validate" type="file" asp-for="AvatarImage">
            </div>
            <div class="file-path-wrapper">
                <input class="file-path validate" type="text" placeholder="Carica immagine persona"> 
            </div>
        </div>

        <div class="form-group">
                <div class="center-align">
                    <div class="col-md-offset-2 col-md-10">

                        <button type="submit" class="btn tooltipped" data-position="bottom" data-delay="50" data-tooltip="Create">
                            <i class="material-icons">add_circle_outline</i>
                        </button>
                    </div>
                </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">
        <button type="button" class="btn tooltipped" data-position="bottom" data-delay="50" data-tooltip="Back to List">
            <i class="material-icons">arrow_back</i>
        </button>
    </a>
</div>

<div>
    <br />
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        })
</script>
}
